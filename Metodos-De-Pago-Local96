/////////////////////////////////////////////FIN SWITCH OPCUOTAS VISA ///////////////////////////////////////////////////////////////////////////////
            	
		break;
            case 3:
                system("cls");
                printf("\n  __________________________________________________________");
                printf("\n |               - Opcion Mercado Pago -                    |");
                printf("\n |__________________________________________________________|");
                printf("\n |                1 - Pagar por CVU                         |");
                printf("\n |                2 - Pagar por Alias                       |");
                printf("\n |                3 - Pagar por Telefono                    |");
                printf("\n |__________________________________________________________|");
                printf("\n Opcion -> ");
                scanf("%i", &opcmercado);
                fflush(stdin);
                break;
        }

        switch (opcmercado) {
            case 1:
                system("cls");
                strcpy(metodoU, "Mercado Pago CVU");
                printf("\n  __________________________");
                printf("\n | - CVU -> 2345678901234 - |");
                printf("\n |Productos del Cliente -> ");
                scanf("%i", &numprod);
                fflush(stdin);
                system("cls");

                while (contpedi <= numprod) {
                    printf("\n Precio del producto %d -> $", contpedi);
                    float precio;
                    scanf("%f", &precio);
                    fflush(stdin);
                    system("cls");

                    if (precio <= 0) {
                        printf("Precio ingresado invalido.\n");
                        continue;
                    }

                    total += precio;
                    contpedi++;
                }

                printf("\n  ___________________________________________________________");
                printf("\n |El Total a Pagar es -> $ %.2f", total);
                printf("\n |___________________________________________________________|");
                printf("\n |El Metodo a pagar utilizado fue: %s", metodoU);
                printf("\n |___________________________________________________________|");

                total = 0;
                contpedi = 1;
                break;

            case 2:
                system("cls");
                strcpy(metodoU, "Mercado Pago Alias");
                printf("\n  __________________________");
                printf("\n |   - Alias -> Local_96 -  |");
                printf("\n |__________________________|");
                printf("\n Productos del Cliente -> ");
                scanf("%i", &numprod);
                fflush(stdin);
                system("cls");

                while (contpedi <= numprod) {
                    printf("\n Precio del producto %d -> $", contpedi);
                    float precio;
                    scanf("%f", &precio);
                    fflush(stdin);
                    system("cls");

                    if (precio <= 0) {
                        printf("Precio ingresado invalido.\n");
                        continue;
                    }

                    total += precio;
                    contpedi++;
                }

                printf("\n  ___________________________________________________________");
                printf("\n |El Total a Pagar es -> $ %.2f", total);
                printf("\n |___________________________________________________________|");
                printf("\n |El Metodo a pagar utilizado fue: %s", metodoU);
                printf("\n |___________________________________________________________|");

                total = 0;
                contpedi = 1;
                break;

            case 3:
                system("cls");
                strcpy(metodoU, "Mercado Pago Telefono");
                printf("\n  ____________________________");
                printf("\n | - Telefono -> 1234567890 - |");
                printf("\n |____________________________|");
                printf("\n |Productos del Cliente -> ");
                scanf("%i", &numprod);
                fflush(stdin);
                system("cls");

                while (contpedi <= numprod) {
                    printf("\n Precio del producto %d -> $", contpedi);
                    float precio;
                    scanf("%f", &precio);
                    fflush(stdin);
                    system("cls");

                    if (precio <= 0) {
                        printf("Precio ingresado invalido.\n");
                        continue;
                    }

                    total += precio;
                    contpedi++;
                }

                printf("\n  ___________________________________________________________");
                printf("\n |El Total a Pagar es -> $ %.2f", total);
                printf("\n |___________________________________________________________|");
                printf("\n |El Metodo a pagar utilizado fue: %s", metodoU);
                printf("\n |___________________________________________________________|");

                total = 0;
                contpedi = 1;
                break;
        }

    } while (opc != 0);

    return 0;
}

